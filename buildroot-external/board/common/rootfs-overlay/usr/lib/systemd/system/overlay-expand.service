[Unit]
Description=Overlay resizing
DefaultDependencies=no
RefuseManualStart=true
RefuseManualStop=true
Requires=dev-disk-by\x2dpartlabel-overlay.device
After=dev-disk-by\x2dpartlabel-overlay.device systemd-fsck@dev-disk-by\x2dpartlabel-overlay.service

[Service]
Type=oneshot
ExecStart=/usr/libexec/overlay-expand.sh
RemainAfterExit=true

[Install]
WantedBy=local-fs.target


