[Unit]
Description=Unipi Control
After=multi-user.target
Requires=unipitcp.service
ConditionPathExists=/usr/local/opt/venv/unipi-control/bin/unipi-control
ConditionPathExists=/usr/local/etc/unipi-dev/control.yaml
Conflicts=unipi-control.service

[Service]
Type=simple
ExecStart=/usr/local/opt/venv/unipi-control/bin/unipi-control \
    --config /usr/local/etc/unipi-dev \
    --log systemd
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
