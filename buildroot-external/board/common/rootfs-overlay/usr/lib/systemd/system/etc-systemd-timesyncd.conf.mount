[Unit]
Description=Persistent /etc/systemd/timesyncd.conf
Requires=os-overlay.service
After=mnt-overlay.mount os-overlay.service
Before=systemd-timesyncd.service

[Mount]
What=/mnt/overlay/etc/systemd/timesyncd.conf
Where=/etc/systemd/timesyncd.conf
Type=none
Options=bind

[Install]
WantedBy=os-bind.target
