[Unit]
Description=Boot partition
DefaultDependencies=no
Before=umount.target local-fs.target
Conflicts=umount.target
After=systemd-fsck@dev-disk-by\x2dlabel-\x2dboot.service
Wants=systemd-fsck@dev-disk-by\x2dlabel-\x2dboot.service

[Mount]
What=/dev/disk/by-label/boot
Where=/mnt/boot
Type=auto
Options=sync

[Install]
WantedBy=local-fs.target
